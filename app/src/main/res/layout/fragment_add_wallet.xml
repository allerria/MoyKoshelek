<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_wallet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_type"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/wallet_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#e8e8e8"
        android:entries="@array/wallet_types"
        android:prompt="@string/type_wallet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#f0f0f0"
        app:layout_constraintTop_toBottomOf="@id/wallet_type_spinner" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_name"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_name"
        app:layout_constraintLeft_toLeftOf="@id/icon_type"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/wallet_name"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#e8e8e8"
        android:hint="Название кашелька"
        android:padding="4dp"
        android:singleLine="true"
        android:textColorHint="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/separator" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_card"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_card"
        app:layout_constraintLeft_toLeftOf="@id/icon_name"
        app:layout_constraintTop_toBottomOf="@id/icon_name" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/wallet_card_number"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:background="#e8e8e8"
        android:hint="Номер карты"
        android:padding="4dp"
        android:singleLine="true"
        android:textColorHint="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_name" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_date"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintLeft_toLeftOf="@id/icon_name"
        app:layout_constraintTop_toBottomOf="@id/icon_card" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/wallet_card_date"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:background="#e8e8e8"
        android:hint="Срок действия карты"
        android:padding="4dp"
        android:singleLine="true"
        android:textColorHint="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_card_number" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_number"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_number"
        app:layout_constraintLeft_toLeftOf="@id/icon_name"
        app:layout_constraintTop_toBottomOf="@id/icon_date" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/wallet_account_number"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:background="#e8e8e8"
        android:hint="Номер счета"
        android:padding="4dp"
        android:singleLine="true"
        android:textColorHint="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_card_date" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_wallet"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_wallet"
        app:layout_constraintLeft_toLeftOf="@id/icon_name"
        app:layout_constraintTop_toBottomOf="@id/icon_number" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/wallet_number"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:background="#e8e8e8"
        android:hint="Номер кашелька"
        android:padding="4dp"
        android:singleLine="true"
        android:textColorHint="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_account_number" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_currency"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_currency"
        app:layout_constraintLeft_toLeftOf="@id/icon_name"
        app:layout_constraintTop_toBottomOf="@id/icon_wallet" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/wallet_currency_spinner"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:background="#e8e8e8"
        android:entries="@array/currency_types"
        android:prompt="@string/currency"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_number" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit_button"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/save_btn_background"
        android:text="@string/add"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/wallet_currency_spinner"
        app:layout_constraintTop_toBottomOf="@id/wallet_currency_spinner" />
</android.support.constraint.ConstraintLayout>