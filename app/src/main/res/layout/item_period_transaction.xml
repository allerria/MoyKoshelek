<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_period_transaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/p_category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/p_period_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_category_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="@android:string/untitled"/>

    <TextView
        android:id="@+id/p_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/p_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/p_cost_text_view"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="@android:string/untitled" />
</RelativeLayout>